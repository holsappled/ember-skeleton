<div class="col-md-4">
  <div class="list-group">
    <div class="list-group-item">
      {{input type="text" class="new-employee" placeholder="New Employee" value=newName}}
      <button class="btn btn-primary btn-sm new-artist-button" {{action "createEmployee"}} disabled={{disabled}}>Add</button>
    </div>
    {{#each model as |employee|}}
    {{#link-to "employee.profile" employee class="employee-link"}}
    <div class="list-group-item">
      {{employee.last}}, {{employee.first}}
    </div>
    {{/link-to}}
    {{/each}}
    <div class="list-group-item">
      {{#pagination-base action='previousPage' enabled=hasPreviousPage }}Prev{{/pagination-base}}
      {{#pagination-base action='nextPage' enabled=hasNextPage }}Next{{/pagination-base}}
    </div>
  </div>
</div>
<div class="col-md-8">
  <div class="list-group">
    {{outlet}}
  </div>
</div>
